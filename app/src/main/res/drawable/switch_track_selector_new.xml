<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="true" >
    <shape android:shape="rectangle" android:dither="true" android:useLevel="false" android:visible="true">
        <size android:width="36dp" android:height="21dp"/>
        <solid android:width="1dp" android:color="@color/mainBlueColor"/>
        <stroke android:width="6dp" android:color="@color/mainBlueColor"/>
        <corners android:radius="21dp"/>
    </shape>
</item>

<item android:state_checked="false" >
    <shape android:shape="rectangle" android:dither="true" android:useLevel="false" android:visible="true">
        <size android:width="36dp" android:height="21dp"/>
        <solid android:width="1dp" android:color="#9BA6B3"/>
        <stroke android:width="6dp" android:color="#9BA6B3"/>
        <corners android:radius="21dp"/>
    </shape>
</item>

</selector>